<!DOCTYPE html>
<html>
  <head>
    <title>Trimr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="flex-content-container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <%= link_to "Trimr", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          
          <ul class="nav navbar-nav">
            <li class="nav-item">
              <%= link_to "Book A Barber", barbers_path, class: 'nav-link' %>
            </li>
          </ul>

          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
          <li class="nav-item">
            <% if current_user.barbers == true %>
            <%= link_to "Dashboard", barber_barber_path( current_user.barbers.first), class: 'nav-link' %>
            <% else %>
              <%= link_to "Dashboard", dashboard_path, class: 'nav-link' %>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: 'nav-link' %>
          </li>
        
        <% else %>
        
        <li class="nav-item">
          <%= link_to "Log In", new_user_session_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
        </li>
        <% end %>
          </ul>
        </div>
      </nav>

        <% if notice.present? %>
          <p class="notice"><%= notice %></p>
        <% end %>

        <% if alert.present? %>
          <p class="alert"><%= alert %></p>
        <% end %>


        <%= yield %>
      </div>

      <div id="footer">
        <div class="container">
          <div class="row">
            <div class="col-12 col-sm-3">
              <b>Teachers</b>
              <br />
              <%= link_to 'Become a Barber', new_barber_barber_path  %>
              <br />
              <%= link_to 'My Dashboard', '#' %>
            </div>
            <div class="col-12 col-sm-3">
              <b>About</b>
              <br />
              <%= link_to 'Team', '#' %>
              <br />
              <%= link_to 'Careers', '#' %>
              <br />
              <%= link_to 'Privacy Policy', '#' %>
            </div>
            <div class="col-12 col-sm-3">
              <b>Contact</b>
              <br />
              michaelhandkins@gmail.com
              <br />
              2915 Aftonshire Way
              <br />
              Austin, TX 78748
            </div>
            <div class="col-12 col-sm-3 social">
              <b>Social</b>
              <br />
              <br />
              <%= link_to 'https://github.com/michaelhandkins' do %>
                <i class="fab fa-github-square fa-2x social-icon"></i>
              <% end %>
              <%= link_to 'https://www.facebook.com/profile.php?id=1171523627' do %>
                <i class="fab fa-facebook-square fa-2x social-icon"></i>
              <% end %>
              <%= link_to 'https://www.linkedin.com/in/michaelhandkins/' do %>
                <i class="fab fa-linkedin fa-2x social-icon"></i>
              <% end %>
            </div>
          </div>
        </div>
      <br />
    </div>

  </body>
</html>
